@using Sandbox;
@using Sandbox.UI;
@using Entity.Interactable.Printer;
@inherits PanelComponent

<root>
    <div class="title">$ @(PrinterPrefab.Components.Get<PrinterLogic>().PrinterCurrentMoney.ToString("N0"))</div>
</root>

@code
{

    [Property] GameObject PrinterPrefab { get; set; }


   // [Property] public GameObject Printer { get; set }


    /// <summary>
    /// the hash determines if the system should be rebuilt. If it changes, it will be rebuilt
    /// </summary>
    protected override int BuildHash() => System.HashCode.Combine(PrinterPrefab.Components.Get<PrinterLogic>().PrinterCurrentMoney);
}

<style>
    Printer {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #0d0d0d;
        justify-content: center;
        align-items: center;
        font-weight: bold;
        border-radius: 20px;
    }

	.title {
		font-size: 50px;
		font-color: green;
	}

</style>